<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Lateral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="257dp"
            tools:layout_editor_absoluteX="80dp" android:id="@+id/textView3" android:textStyle="italic"/>
    <TextView
            android:text="ou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="156dp"
            tools:layout_editor_absoluteX="197dp" android:id="@+id/textView4"/>
    <TextView
            android:text="Fulano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="244dp"
            tools:layout_editor_absoluteX="80dp" android:id="@+id/textView5"/>
    <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tvTitle"
                  android:text="@string/comparison_title"
                  android:textColor="@android:color/white"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="16dp"
                  android:textSize="18dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tvPeriod"
                  android:text="@string/comparison_period"
                  android:textColor="@android:color/white"
                  app:layout_constraintTop_toBottomOf="@id/guideline"
                  app:layout_constraintLeft_toLeftOf="@id/tvTitle"
                  android:textStyle="italic"
                  android:textSize="14sp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tvPeriodGt"
                  android:text=">"
                  android:textColor="@android:color/white"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginRight="16dp"
                  android:textStyle="bold|italic"
                  android:textSize="24sp"
                  android:layout_marginTop="20dp"
                  app:fontFamily="sans-serif"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline"
                app:layout_constraintGuide_percent="0.5"/>
    </android.support.constraint.ConstraintLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            tools:srcCompat="@tools:sample/avatars"
            tools:layout_editor_absoluteY="102dp"
            tools:layout_editor_absoluteX="43dp"
            android:id="@+id/imageView2"
            android:scaleType="centerCrop"
            android:adjustViewBounds="false"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            tools:layout_editor_absoluteY="102dp" tools:layout_editor_absoluteX="253dp" android:id="@+id/imageView"
            android:scaleType="centerCrop"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline50"
            app:layout_constraintGuide_percent="0.5"/>
    <TextView
            android:text="Ciclano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="244dp"
            tools:layout_editor_absoluteX="288dp"
            android:id="@+id/textView"/>
    <TextView
            android:text="Zagueiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="257dp"
            tools:layout_editor_absoluteX="288dp" android:id="@+id/textView2" android:textStyle="italic"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline25"
            app:layout_constraintGuide_percent="0.25"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline75"
            app:layout_constraintGuide_percent="0.75"/>
</android.support.constraint.ConstraintLayout>